<div class="container">
  <div id="main-entry" >
    <div class="row">
      <div class="col-md-12 text-center">
        <h1><%= @entry.title %></h1>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 text-center">
        <h4>Date: <%= @entry.date %></h4>
      </div>
    </div>

    <div class="row text-center">
      <div class="col-md-2 col-md-offset-3">
        <h5><%= @entry.stadium.team %></h5>
      </div>
      <div class="col-md-2">
        <h5><%= @entry.stadium.name %></h5>
      </div>
      <div class="col-md-2">
        <h5><%= @entry.stadium.location %></h5>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-2 text-center">
          <p><%= @entry.body %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8  col-md-offset-4">
          <%= image_tag @entry.avatar(:medium),class:'img-responsive entry-picture style_image'%>
      </div>
    </div>
  </div>


  <div class="row text-center">
    <div class="col-md-3 col-md-offset-1 btn edit-entry">
      <%= link_to "Edit Entry", edit_entry_path, {style:'color: #446870;'} %>
    </div>
    <div class="col-md-3 btn back-button">
      <%= link_to "Back to Profile", user_path(@entry.user),{style:'color: #CDF3FC;'}  %>
    </div>
    <div class="col-md-3 btn delete-entry">
        <%= link_to "Delete Entry", entry_path, style:'color: #446870;',method: :delete, data: ({confirm:"Are you sure you want to remove this entry?"}) %>
    </div>
  </div>
</div>


<script>
$('.img-responsive').hover(makeBigger, returnToOriginalSize);

function makeBigger() {
    $(this).css({height: '+=200%', width: '+=200%'});
}
function returnToOriginalSize() {
    $(this).css({height: "", width: ""});
}
</script>
