<div class="container">
  <div class="row">
    <div class="col-md-1"><h1 class="text-center"><%= @user.first_name %></h1></div>
  </div>
  <div class="row">
    <div class="col-md-4"><%= image_tag(@user.avatar.url(:thumb), class:"img-rounded") %></div>
    <div id="entry" class="col-md-8"><% @user.entries.each do |e| %>
      <h2 class="text-center"><%= link_to e.title, entry_path(e)%></h2>
      <h5 class="col-md-6 col-md-offset-3 text-center"><%= e.stadium.name %></h5><br>
      <h5 class="col-md-6 col-md-offset-3 text-center">Date: <%= e.date %></h5><br>
      <%= e.body %><br>
      <%= image_tag e.avatar.url(:medium)%><br>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-1"><p>Favorite Team: <%= @user.favorite %></p></div>
  </div>
  <p><%= link_to "Add New Entry", new_entry_path %></p>
  <%= link_to "Edit Profile", edit_user_path %>
  <%= link_to "Delete Profile", user_path, method: :delete, data:({confirm: "Are you sure you want to delete your profile?"}) %><br>

</div>
