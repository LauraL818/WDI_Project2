		<li data-target = "#home" data-slide-to = "1"></li>
		<li data-target = "#home" data-slide-to = "2"></li>
		<li data-target = "#home" data-slide-to = "3"></li>
	</ol>
	<div class="carousel-inner">
		<div class = "item active">
			<div class="container login_screen">
				<img src = "/photos/rockies.jpg" alt="Coors Field" class="img-responsive">
			</div>
			<div class="carousel-caption">
					<h3>Coors Field</h3>
					<p>Home of the Colorado Rockies</p>
			</div>
		</div>

		<div class = "item">
			<div class="container login_screen">
				<img src = "/photos/cubs.jpg" alt="Wrigley Field" class="img-responsive">
			</div>
			<div class="carousel-caption">
					<h3> Wrigley Field</h3>
					<p>Home of the Chicago Cubs</p>
			</div>
		</div>

		<div class = "item">
			<div class="container login_screen">
				<img src = "/photos/pirate.jpg" alt="PNC Park" class="img-responsive">
			</div>
			<div class="carousel-caption">
					<h3> PNC Park</h3>
					<p>Home of the Pittsburgh Pirates</p>
			</div>
		</div>

		<div class = "item">
			<div class="container login_screen">
				<img src = "/photos/angels.jpg" alt="Angel Stadium" class="img-responsive">
			</div>
			<div class="carousel-caption">
					<h3>Angel Stadium</h3>
					<p>Home of the Los Angeles Angeles</p>
			</div>
		</div>

	</div>

	<a class="carousel-control left" href="#home" data-slide="prev">
		<span class="icon-prev"></span>
	</a>

	<a class="carousel-control right" href="#home" data-slide="next">
		<span class="icon-next"></span>
	</a>


</div>

<%= form_tag sessions_path,{:class => 'form-horizontal sign-in'} do %>
 <div class="row"><legend class="col-md-4 col-md-offset-4">Sign In:</legend></div>
   <fieldset>
     <div class="form-group">
         <%= label_tag :email, 'Email', class: 'col-md-4 control-label' %>
       <div class="col-md-5">
           <%= text_field_tag :email, params[:email], class: 'form-control' %>
       </div>
     </div>
     <div class="form-group">
         <%= label_tag :password, 'Password', class: 'col-md-4 control-label' %>
       <div class="col-md-5">
           <%= password_field_tag :password, nil, class: 'form-control' %>
       </div>
     </div>
     <div class="form-group">
         <div class="col-md-8 col-md-offset-4">
             <%= submit_tag 'Sign In', class: 'btn edit-button' %>
           <%= link_to "Don't have an account?", new_user_path, class: 'btn edit-button' %>
         </div>
     </div>
   </fieldset>
<% end %>
